<div class="jumbotron jumbotron-fluid">
   <h1 class="display-3">EAT-DA-BURGER!</h1>
   <img src="/public/assets/img/burger.jpg">

  <div class="container">
   <div class="row">
       <div class="col-md-6" id="not_devoured">
           <h2>Burgers that are not yet devoured!</h2>
           {{#each burgers}}
           {{#unless devoured}}
           <div class="not-eaten">
               {{id}}. {{burger_name}}
               <button class="devoured" data-id="{{id}}" data-devoured="{{devoured}}">
                   EAT ME!
               </button></div>
           {{/unless}}
           {{/each}}
       </div>
       <div class="col-md-6" id="devoured">
           <h2>Devoured Burgers!</h2>
           {{#each burgers}}
           {{#if devoured}}
           <div class="eaten">
               {{id}}. {{burger_name}}
           </div>
           {{/if}}
           {{/each}}
       </div>
   </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Hot'n Fresh!
  </div>

  <button type="submit">Add Burger</button>
</form>